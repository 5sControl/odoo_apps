<odoo>
    <data>
        <!-- Представление в виде таблицы для min_max.connection -->
        <record model="ir.ui.view" id="view_connection_tree">
            <field name="name">min_max.connection.tree</field>
            <field name="model">min_max.connection</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="url"/>
                    <field name="username"/>
                    <field name="password"/>
                </tree>
            </field>
        </record>

        <!-- Действие для отображения min_max.connection в виде таблицы -->
        <record model="ir.actions.act_window" id="action_connection">
            <field name="name">Connections</field>
            <field name="res_model">min_max.connection</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_connection_tree"/>
            <field name="target">current</field>
        </record>

        <!-- Представление в виде таблицы для min_max.items -->
        <record model="ir.ui.view" id="view_items_tree">
    <field name="name">min_max.items.form</field>
    <field name="model">min_max.items</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <field name="name"/>
                <field name="object_type"/>
                <field name="status"/>
                <field name="current_stock_level"/>
                <button name="update_items_from_api" string="Update Items from API" type="object" class="oe_highlight"/>
            </group>
        </form>
    </field>
</record>

        <!-- Действие для отображения min_max.items в виде таблицы -->
        <record model="ir.actions.act_window" id="action_items">
            <field name="name">Items</field>
            <field name="res_model">min_max.items</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_items_tree"/>
            <field name="target">current</field>
        </record>

        <!-- Добавление представлений в меню -->
        <menuitem name="Min Max 5S" id="menu_min_max_5s" sequence="1"/>
        <menuitem name="Connections" id="menu_connection" parent="menu_min_max_5s" action="action_connection"/>
        <menuitem name="Items" id="menu_items" parent="menu_min_max_5s" action="action_items"/>

    </data>
</odoo>

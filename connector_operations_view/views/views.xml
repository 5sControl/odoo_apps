<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- List View -->
        <record model="ir.ui.view" id="view_connector_operations_title_list">
            <field name="name">Connector Operations Title List</field>
            <field name="model">connector_operations.title</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="link"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

<!-- Kanban View -->
<record model="ir.ui.view" id="view_connector_operations_title_kanban">
    <field name="name">Connector Operations Control 5S</field>
    <field name="model">connector_operations.title</field>
    <field name="arch" type="xml">
        <kanban class="oe_background_grey">
            <field name="id"/>
            <field name="description"/>
            <field name="link"/>
            <templates>
                <t t-name="kanban-box">
                    <div style="display: flex; flex-direction: column; align-items: center; width: 1200px; height: 750px; padding: 10px; border: 1px solid #ccc;">
                        <span style="color: black; font-size: 16px; text-align: center;">To unlock the full potential of Operation View module, we recommend pairing it with our powerful 5S Control suite. This dynamic duo seamlessly integrates to process and visualize your data, ensuring the best possible experience. Rest assured, it's a trusted and essential component for maximizing your productivity.</span>
                        <img t-att-src="'/connector_operations_view/static/description/images/img1.jpg'" style="max-height: 500px; max-width: 500px; margin-right: 5px;"/>
                        <div class="oe_slogan">
                            <a class="btn btn-primary btn-lg mt8" style="color: #FFFFFF !important;" href="mailto:info@5scontrol.com"><i class="fa fa-check-square"></i> Send to email </a>
                            <a class="btn btn-primary btn-lg mt8" style="color: #FFFFFF !important;" href="https://5controls.com/"><i class="fa fa-check-square"></i> Link 5controlS </a>
                        </div>
                        <a t-attf-href="https://5controls.com/" t-attf-target="'_blank'">
                                <span style="color: red; font-size: 25px; align-items: center;">Link 5controlS</span>
                            </a>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>



        <!-- Form View -->
        <record model="ir.ui.view" id="view_connector_operations_title_form">
            <field name="name">Connector Operations Title Form</field>
            <field name="model">connector_operations.title</field>
            <field name="arch" type="xml">
                <form string="Connector Operations Title">
                    <sheet>
                        <div name="title_name" class="oe_title">
                            <h1>
                                <field name="link" required="1" placeholder="Links" style="padding-right:10px"/>
                            </h1>
                        </div>
                        <group>
                            <field name="link"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="action_connector_operations_title">
            <field name="name">Connector Operations Control 5S</field>
            <field name="res_model">connector_operations.title</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <!-- Menu Item -->
        <menuitem name="Connector Operations" id="menu_connector_operations_title" action="action_connector_operations_title"/>

    </data>
</odoo>
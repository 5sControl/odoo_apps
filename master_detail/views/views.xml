<odoo>
    <data>
        <!-- Определение представления списка контрактов -->
        <record model="ir.ui.view" id="master_details_contract_list_view">
            <field name="name">MasterDetails Contract List View</field>
            <field name="model">contract.contract</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>

        <!-- Определение представления формы контракта -->
        <record model="ir.ui.view" id="master_details_contract_form_view">
            <field name="name">MasterDetails Contract Form View</field>
            <field name="model">contract.contract</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="client"/>
                            <field name="subcontractor"/>
                            <field name="create_date"/>
                        </group>
                        <notebook>
                            <page string="Act">
                                <field name="acts_ids" widget="one2many_list">
                                    <tree>
                                        <field name="name"/>
                                        <field name="create_date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Определение представления формы акта -->
        <record model="ir.ui.view" id="contract_act_form_view">
            <field name="name">Act Form View</field>
            <field name="model">contract.act</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group string="Info">
                                <field name="contract_id"/>
                                <field name="name"/>
                                <field name="description"/>
                                <field name="address"/>
                                <field name="master_id"/>
                                <field name="phone_number"/>
                                <field name="preliminary_dismantling"/>
                                <field name="permission_excavate"/>
                                <field name="date_receipt_work"/>
                            </group>
                            <group string="Work">
                                <group>
                                    <label for="start_date" string="Start Date"/>
                                    <div>
                                        <field name="start_date"/>
                                    </div>
                                </group>
                                <group>
                                    <label for="end_date" string="End Date"/>
                                    <div>
                                        <field name="end_date"/>
                                    </div>
                                </group>
                                <group>
                                    <label for="preliminary_dismantling" string="Preliminary Dismantling"/>
                                    <div>
                                        <field name="preliminary_dismantling"/>
                                    </div>
                                </group>
                                <group>
                                    <label for="coverage_type" string="Coverage Type"/>
                                    <div>
                                        <field name="coverage_type"/>
                                    </div>
                                </group>
                                <group>
                                    <label for="repair_works" string="Repair Works"/>
                                    <div>
                                        <field name="repair_works"/>
                                    </div>
                                </group>
                                <group>
                                    <label for="diameter" string="Diameter ⌀"/>
                                    <div>
                                        <field name="diameter"/>
                                    </div>
                                </group>
                                <group>
                                    <label for="quantity" string="Quantity"/>
                                    <div>
                                        <field name="quantity"/>
                                    </div>
                                </group>
                                <group>
                                    <label for="unit" string="Unit"/>
                                    <div>
                                        <field name="unit"/>
                                    </div>
                                </group>
                            </group>
                            <group string="Weather">
                                <field name="description_precipitation"/>
                                <field name="precipitation_date"/>
                            </group>


                        </group>
                        <notebook>
                            <page string="Photos">
                                <field name="photos" widget="many2many_binary"
                                       options="{'no_create': True, 'no_open': True}"/>
                            </page>
                            <page string="Employees">
                                <field name="employers_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="job_title"/>
                                        <field name="image_128" widget="image"
                                               options="{'no_create': True, 'no_edit': True}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Определение действия открытия списка контрактов -->
        <record model="ir.actions.act_window" id="master_details_contract_action">
            <field name="name">MasterDetails Contract</field>
            <field name="res_model">contract.contract</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Определение действия открытия списка актов -->
        <record model="ir.actions.act_window" id="master_details_act_action">
            <field name="name">MasterDetails Act</field>
            <field name="res_model">contract.act</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_contract_id": False}</field>
        </record>

        <!-- Добавление представлений в меню -->
        <menuitem name="MasterDetails" id="menu_master_details" sequence="1"/>
        <menuitem name="Contracts" id="menu_master_details_contracts" parent="menu_master_details"
                  action="master_details_contract_action"/>
        <menuitem name="Acts" id="menu_master_details_acts" parent="menu_master_details"
                  action="master_details_act_action"/>

    </data>
</odoo>
